#!/usr/bin/env python
"""
get all the inputs for balrog

"""
from argparse import ArgumentParser
import balrog

parser=ArgumentParser()

parser.add_argument(
    'conf',
    help='configuration file',
)
parser.add_argument(
    'tilename',
    help='tilename to download',
)
parser.add_argument(
    'band',
    default=None,
    help='band to download',
)

parser.add_argument(
    '--clean',
    action='store_true',
    help=('remove all the generated nullwt files'),
)


def main():
    args = parser.parse_args()

    # download inputs and make nullweight files
    prep = balrog.prep.prepare_tile(
        args.conf,
        args.tilename,
        args.band,
        clean=args.clean,
    )

    if args.clean:
        return

    # currenly does nothing
    balrog.sim.make_images(prep)

if __name__=="__main__":
    main()
